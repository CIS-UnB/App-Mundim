<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".Fragments.PatientDataFragment"
                                             android:background="@color/colorPrimary">

    <ScrollView android:layout_width="0dp" android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/sendBtn"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" app:layout_constraintEnd_toStartOf="@+id/guideline"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" android:id="@+id/textInputLayout">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/idTextView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:hint="ID"
                        android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="12sp"
                        android:nextFocusForward="@+id/idadeTextView"
                        android:nextFocusDown="@+id/idadeTextView"
                        android:nextFocusLeft="@+id/idadeTextView"
                        android:nextFocusRight="@+id/idadeTextView"
                        android:nextFocusUp="@+id/idadeTextView"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        android:backgroundTint="@color/grey_1" android:textStyle="normal"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/textInputLayout"
                    android:id="@+id/textInputLayout2"
                    app:layout_constraintStart_toStartOf="@+id/guideline">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/idadeTextView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" android:hint="Idade"
                        android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="12sp"
                        android:nextFocusForward="@+id/sexoTextView"
                        android:nextFocusDown="@+id/sexoTextView"
                        android:nextFocusLeft="@+id/sexoTextView"
                        android:nextFocusRight="@+id/sexoTextView"
                        android:nextFocusUp="@+id/sexoTextView"
                        app:layout_constraintEnd_toStartOf="parent"
                        android:backgroundTint="@color/grey_1" android:textStyle="normal"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline2">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPersonName|textCapWords"
                        android:ems="10"
                        android:id="@+id/sexoTextView"
                        android:hint="Sexo"
                        android:fontFamily="@font/montserrat"
                        android:typeface="normal"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline2"
                        android:backgroundTint="@color/grey_1" android:textStyle="normal"
                        tools:layout_editor_absoluteY="193dp" app:layout_constraintHorizontal_bias="1.0"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout" android:layout_marginStart="16dp"
                    android:id="@+id/textInputLayout4" android:layout_marginTop="8dp">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textCapWords"
                        android:ems="10"
                        android:id="@+id/nomeTextView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:hint="Nome"
                        android:fontFamily="@font/montserrat"
                        android:typeface="normal" android:textSize="12sp" android:backgroundTint="@color/grey_1"
                        android:textStyle="normal" tools:layout_editor_absoluteY="257dp"
                        app:layout_constraintHorizontal_bias="0.0"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout4" android:layout_marginStart="16dp"
                    android:id="@+id/textInputLayout3" android:layout_marginTop="8dp">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textAutoCorrect|textPersonName|textCapWords"
                        android:ems="10"
                        android:id="@+id/procedenciaTextView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:hint="ProcedÃªncia"
                        android:fontFamily="@font/montserrat"
                        android:typeface="normal" android:textSize="12sp" app:layout_constraintHorizontal_bias="0.0"
                        android:backgroundTint="@color/grey_1" android:textStyle="normal"
                        app:layout_constraintTop_toTopOf="parent"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:id="@+id/textInputLayout5"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"
                    app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginTop="8dp">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textAutoCorrect|textPersonName|textCapWords"
                        android:ems="10"
                        android:id="@+id/naturalidadeTextView"
                        android:nextFocusForward="@+id/estadoTextView"
                        android:nextFocusDown="@+id/estadoTextView"
                        android:nextFocusLeft="@+id/estadoTextView"
                        android:nextFocusRight="@+id/estadoTextView"
                        android:nextFocusUp="@+id/estadoTextView"
                        android:hint="Naturalidade"
                        android:fontFamily="@font/montserrat"
                        android:typeface="normal" android:textSize="12sp"
                        android:backgroundTint="@color/grey_1"
                        android:textStyle="normal" tools:layout_editor_absoluteY="231dp"
                        tools:layout_editor_absoluteX="0dp"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayout6"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="@+id/guideline2"
                    android:layout_marginEnd="16dp" android:layout_marginTop="8dp">

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textAutoCorrect|textPersonName|textCapWords|textCapCharacters"
                        android:ems="10"
                        android:id="@+id/estadoTextView"
                        android:hint="Estado" android:fontFamily="@font/montserrat"
                        android:typeface="normal" android:textSize="12sp"
                        android:backgroundTint="@color/grey_1" android:textStyle="normal"
                        tools:layout_editor_absoluteX="246dp" tools:layout_editor_absoluteY="259dp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.constraint.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:background="@color/grey_2"
                    android:id="@+id/separator"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout5" android:layout_marginTop="8dp">

            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.Guideline
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/guideline"
                    app:layout_constraintGuide_percent="0.5"/>
            <android.support.constraint.Guideline
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/guideline2"
                    app:layout_constraintGuide_percent="0.74"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
    <Button
            android:text="Salvar"
            android:layout_width="0dp"
            android:id="@+id/sendBtn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/TitleTheme" android:fontFamily="@font/montserrat" android:typeface="normal"
            android:background="@color/colorPrimaryDark" android:layout_height="51dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/saveBtnBottomSeparator"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="1px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/sendBtn" android:background="@color/grey_2"
            android:id="@+id/saveBtnTopSeparator">

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="1px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/grey_2"
            android:id="@+id/saveBtnBottomSeparator"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent">

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>